<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/wallhaven_380781"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageButton android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="3dp"
        android:background="@drawable/img_20160924_105215735" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#80000000"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColor="#FFFFFF"
        android:text="Name: Danny Lui" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#80000000"
        android:layout_marginTop="4dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:textColor="#FFFFFF"
        android:text="Nickname: Dan"
        />

    <TextView android:id="@+id/text_view"
        android:layout_below="@id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#80000000"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFFFF"
        android:padding="10dp"
        android:text="I'm an aspiring Android developer and a computer enthusiast. I like to code on my free time and build computers when I have the money but I don't. So I spend most of the time eating snacks and watching netflix. And I code when I feel inspired to." />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/despicable_me_minions"/>
</LinearLayout>
