<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cloud_backgrd">
    <ImageView
        android:id="@+id/linkedin"
        android:src="@drawable/wesnie"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:paddingBottom="0dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linkedin"
        android:text="Wesnie Marcelin" />
<TextView
    android:id="@+id/bio"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/name"
    android:textSize="15dp"
    android:textColor="@color/white"
    android:text="My name is Wesnie and I'm from Florida.I'm an android developer who enjoys working on projects and learning new things. My favorite color is blue. I would love to travel the world one day. "/>
    <ImageView
        android:id="@+id/travel_pic"
        android:src="@drawable/travel"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/bio"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <ImageView
        android:id="@+id/programming"
        android:src="@drawable/programming"
        android:layout_below="@id/bio"
        android:paddingTop="0dp"
        android:layout_toRightOf="@id/travel_pic"
        android:layout_width="250dp"
        android:layout_height="350dp" />
</RelativeLayout>
