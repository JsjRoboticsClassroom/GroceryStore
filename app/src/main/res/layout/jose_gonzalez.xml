<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/beach">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/bromide1"
        android:src="@drawable/bromide1"
        android:adjustViewBounds="true"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
  <ImageView
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:scaleType="centerCrop"
      android:layout_gravity="left"
      android:id="@+id/joseg1"
      android:src="@drawable/joseg"
      android:adjustViewBounds="true"
      android:maxWidth="150dp"
      android:maxHeight="150dp"
      />
  <ImageView
      android:layout_width="200dp"
      android:layout_height="100dp"
      android:scaleType="centerCrop"
      android:layout_gravity="end"
      android:id="@+id/turntable"
      android:src="@drawable/turntable"
      android:adjustViewBounds="true"
      android:paddingLeft="30dp"
      android:maxWidth="200dp"
      android:maxHeight="100dp"
      />
  </LinearLayout>

 <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewthree"
        android:text="@string/textviewthree"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewfour"
        android:text="@string/textviewfour"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewfive"
        android:text="@string/textviewfive"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewsix"
        android:text="@string/textviewsix"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewseven"
        android:text="@string/textviewseven"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textvieweight"
        android:text="@string/textvieweight"
        />


</LinearLayout>
