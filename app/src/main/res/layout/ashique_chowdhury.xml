<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/background1"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ASHIQUE"
        android:paddingBottom="30dp"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp">

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/ashique"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASH-"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="I enjoy sleeping and waking late. Waking earlier than 10am is a struggle for me. Get things done early is my motto, but I never end up following it."/>
    </LinearLayout>
</LinearLayout>


