<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/black"
        tools:context="com.example.queenabergen.directory.MainActivity">


        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Queena"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:id="@+id/textView"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView" />

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/queenaimage"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twittercheck"
            android:layout_toRightOf="@id/textView"/>



    </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cold Case Connoisseur"
    android:textStyle="bold"
    android:fontFamily="sans-serif"
    android:layout_gravity="center"
    android:textColor="@color/blue"
    android:textSize="30sp"
    android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EST SINCE: 2016
        *German Engineered Bottles
        *NJ Famous Root Beer Floats
        *On break until clockout "
        android:fontFamily="sans-serif"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:textSize="20sp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname:Cue"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_gravity="center"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text='"Every case deserves a cold one" '
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/blue"
        android:textSize="26sp"
        android:background="@color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cuecodelogo"
        android:layout_toRightOf="@id/textView"/>





</LinearLayout>
